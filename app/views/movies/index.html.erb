<div class="header">
	<h1><%= pluralize(@movies.size, 'Movies') %></h1>
</div>

<div class="movie_container">
	<ul>
		<% @movies.each do |movie| %>	
			<li>
				<%= link_to(movie.title, movie_path(movie)) %> (<%= movie.rating %>) 
			</li> 
			<li>
				<%= format_total_gross(movie) %> 
			</li>
			<p>
				<%= truncate(movie.description, length: 88, separator: ' ') %><br/>
				<%= movie.released_on %>
			</p>	
		<% end %>
	</ul>
</div>

