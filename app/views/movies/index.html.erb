<div class="header">
<h1><%= @movies.size %> Movies</h1>
</div>

<ul class="movie_message">
	<% @movies.each do |movie| %>
		<li>
			<strong><%= movie.title %></strong> (<%= movie.rating %>) : <%= number_to_currency(movie.total_gross) %> 
		</li>
		<p>
			<%= movie.description %>
		</p>
		<p>
			<%= movie.released_on %>
		</p>
	<% end %>
</ul>

